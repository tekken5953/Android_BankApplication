<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:text="회원가입"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_blue"
        android:textSize="30sp"
        android:id="@+id/main_text"
        android:fontFamily="@font/cookierunregular"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰 번호  : "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/sign_up_id_tx"
        android:layout_below="@id/main_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_below="@+id/main_text"
        android:id="@+id/sign_up_id"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_toRightOf="@+id/sign_up_id_tx"
        android:inputType="textNoSuggestions|number"
        android:background="@drawable/signup_edit"
        android:layout_marginTop="35dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="핸드폰 번호는 ' - ' 없이 입력 해 주세요."
        android:layout_below="@+id/sign_up_id_tx"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="@android:color/holo_red_light"
        android:id="@+id/warning_msg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 름  : "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/sign_up_name_tx"
        android:layout_below="@id/warning_msg"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:id="@+id/sign_up_name"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_below="@+id/warning_msg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="21dp"
        android:layout_toRightOf="@+id/sign_up_name_tx"
        android:background="@drawable/signup_edit"
        android:gravity="center"
        android:inputType="textNoSuggestions"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호  : "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/sign_up_pwd_tx"
        android:layout_below="@id/sign_up_name_tx"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/sign_up_name_tx"
        android:background="@drawable/signup_edit"
        android:id="@+id/sign_up_pwd"
        android:textSize="15sp"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/sign_up_pwd_tx"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인  : "
        android:textSize="17sp"
        android:textColor="@color/black"
        android:id="@+id/sign_up_repwd_tx"
        android:layout_below="@id/sign_up_pwd_tx"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"/>

    <EditText
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_below="@+id/sign_up_pwd_tx"
        android:id="@+id/sign_up_repwd"
        android:textSize="15sp"
        android:gravity="center"
        android:inputType="textPassword"
        android:layout_toRightOf="@id/sign_up_repwd_tx"
        android:layout_marginTop="32dp"
        android:background="@drawable/signup_edit"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/sign_up_repwd_tx"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입하기"
            android:background="@drawable/button_blue"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:fontFamily="@font/cookierunregular"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/sign_up_ok"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_blue"
            android:textColor="@color/white"
            android:text="취 소"
            android:fontFamily="@font/cookierunregular"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="70dp"
            android:layout_marginBottom="30dp"
            android:id="@+id/sign_up_cancel"/>
    </LinearLayout>

</RelativeLayout>
