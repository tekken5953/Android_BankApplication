<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Manager_SettingFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중량 제한 및 시세 확인"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:id="@+id/main_text"
        android:layout_margin="10dp"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scrollbars="vertical"
        android:overScrollMode="ifContentScrolls"
        android:id="@+id/manager_setting_list"
        android:layout_below="@+id/main_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/black"
        android:layout_below="@+id/manager_setting_list"
        android:id="@+id/manager_setting_line"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_tv"
        android:text="수정하기"
        android:layout_below="@+id/manager_setting_line"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/rd_relative"
        android:layout_below="@+id/edit_tv"
        android:background="@drawable/boundary"
        android:layout_margin="10dp">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rg_1"
            android:layout_margin="10dp">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd1_1"
                android:text="중량"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rd1_2"
                android:text="시세"
                android:layout_marginTop="5dp"/>
        </RadioGroup>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:id="@+id/rd_line1"
            android:layout_toRightOf="@+id/rg_1"
            android:layout_marginLeft="15dp"/>

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/rd_scroll1"
            android:scrollbars="none"
            android:layout_toRightOf="@+id/rd_line1">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rg_2"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_1"
                    android:text="품목1"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_2"
                    android:text="품목2"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_3"
                    android:text="품목2"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_4"
                    android:text="품목3"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_5"
                    android:text="품목4"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_6"
                    android:text="품목5"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_7"
                    android:text="품목6"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_8"
                    android:text="품목7"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_9"
                    android:text="품목8"
                    android:layout_marginTop="5dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rd2_10"
                    android:text="품목9"
                    android:layout_marginTop="5dp"/>
            </RadioGroup>
        </ScrollView>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="@color/line"
            android:id="@+id/rd_line2"
            android:layout_toRightOf="@+id/rd_scroll1"
            android:layout_marginLeft="50dp"/>

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rd_line2"
            android:layout_centerVertical="true"
            android:id="@+id/rd_edit"
            android:backgroundTint="@color/black"
            android:hint="변경 값"
            android:layout_marginLeft="10dp"
            android:inputType="number"
            android:gravity="center"/>
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rd_btn"
        android:background="@drawable/button_blue"
        android:text="변 경"
        android:textColor="@color/white"
        android:layout_below="@+id/rd_relative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"/>



</RelativeLayout>